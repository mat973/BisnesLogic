create table person(
    id int generated by default as identity,
    name varchar(100),
    wallet int,
    age int CHECK ( age > 0 )
);

create table item(
    id int generated by default as identity,
    name varchar(100),
    count int;
    price int;
);

create table order(
    person_id int references person(id),
    item_id int references item(id),
    condition varchar(100),
    primary key(person_id,item_id )
);


alter table item add column count int;
